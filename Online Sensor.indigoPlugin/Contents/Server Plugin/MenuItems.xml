<?xml version="1.0"?>
<MenuItems>
	<MenuItem id="onlineSensor">
		<Name>Create Sample Online Sensor Device</Name>
		<CallbackMethod>createSampleDevice</CallbackMethod>
		<ConfigUI>
		    <Field id="sampleLabel" type="label">
		        <Label>Create a device that pings major DNS servers to indicate if Indigo is connected to he internet. You can customize the device after it is created.</Label>
		    </Field>
			<Field id="deviceName" type="textfield" defaultValue="Online Sensor">
				<Label>Device Name:</Label>
			</Field>
		</ConfigUI>
	</MenuItem>
	<MenuItem id="publicIP">
		<Name>Create Sample Public IP Device</Name>
		<CallbackMethod>createSampleDevice</CallbackMethod>
		<ConfigUI>
		    <Field id="sampleLabel" type="label">
		        <Label>Create a device that checks Indigo's public IP address. You can customize the device after it is created.</Label>
		    </Field>
			<Field id="deviceName" type="textfield" defaultValue="Public IP">
				<Label>Device Name:</Label>
			</Field>
		</ConfigUI>
	</MenuItem>
	<MenuItem id="speedtest">
		<Name>Create Sample Speedtest Device</Name>
		<CallbackMethod>createSampleDevice</CallbackMethod>
		<ConfigUI>
		    <Field id="sampleLabel" type="label">
		        <Label>Create a device that checks connection speed with speedtest.net. You can customize the device after it is created.</Label>
		    </Field>
			<Field id="deviceName" type="textfield" defaultValue="Speedtest">
				<Label>Device Name:</Label>
			</Field>
		</ConfigUI>
	</MenuItem>
	<MenuItem id='updateSeparator' />
	<MenuItem id="checkForUpdates">
        <Name>Check for Updates</Name>
        <CallbackMethod>checkForUpdates</CallbackMethod>
    </MenuItem>
    <MenuItem id="updatePlugin">
        <Name>Update Plugin</Name>
        <CallbackMethod>updatePlugin</CallbackMethod>
    </MenuItem>
    <MenuItem id="forceUpdate">
        <Name>Force Update</Name>
        <CallbackMethod>forceUpdate</CallbackMethod>
    </MenuItem>
	<MenuItem id='debugSeparator' />
    <MenuItem id='toggleDebug'>
        <Name>Toggle Debugging</Name>
		<CallbackMethod>toggleDebug</CallbackMethod>
	</MenuItem>
</MenuItems>
